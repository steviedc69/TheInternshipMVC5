@using Microsoft.AspNet.Identity
@model Internship.ViewModels.RegistratieModelCreater

@{
    ViewBag.Title = "EditProfile";
    Layout = "~/Views/Bedrijf/_BedrijfLayout.cshtml";
}
<ul class="nav nav-tabs">
    <li class="active"><a href="#">Profiel</a></li>
    <li>@Html.ActionLink("Beveiliging", "ChangePassword", new { id = User.Identity.GetUserId() })</li>
</ul>

<h2>Wijzig profiel</h2>
<div class="row">
    <div class="form-horizontal">
        @using (Html.BeginForm("EditProfile", "Bedrijf", FormMethod.Post,
            new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4>Wijzig gegevens</h4>
            <hr />
            @Html.ValidationSummary(false)

            <div class="form-group">
                @Html.LabelFor(m => m.UpdateModel.Bedrijfsnaam, new {@class = "col-md-2 control-label"})
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.UpdateModel.Bedrijfsnaam, new {@class = "form-control", style = "width: 50%"})

                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.UpdateModel.Url, new {@class = "col-md-2 control-label"})
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.UpdateModel.Url, new {@class = "form-control", style = "width: 50%"})
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.UpdateModel.Straat, new {@class = "col-md-2 control-label"})
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.UpdateModel.Straat, new {@class = "form-control", style = "width: 50%"})
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.UpdateModel.Straatnummer, new {@class = "col-md-2 control-label"})
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.UpdateModel.Straatnummer, new {@class = "form-control", style = "width: 50%"})
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.UpdateModel.Woonplaats, new {@class = "col-md-2 control-label"})
                <div class="col-md-10">
                    @Html.DropDownListFor(m => m.UpdateModel.Woonplaats, Model.GemeenteLijst, new {@class = "form-control", style = "width: 50%"})
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.UpdateModel.Telefoon, new {@class = "col-md-2 control-label"})
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.UpdateModel.Telefoon, new {@class = "form-control", style = "width: 50%"})
                </div>
            </div>
            <div class="btn-group-sm">
                <div class="form-group">
                    @Html.LabelFor(m => m.UpdateModel.PerAuto, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.CheckBoxFor(m => m.UpdateModel.PerAuto, new { @class = "form-control", style = "width: 50%" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.UpdateModel.Openbaarvervoer, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.CheckBoxFor(m => m.UpdateModel.Openbaarvervoer, new { @class = "form-control", style = "width: 50%" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.UpdateModel.Activiteit, new {@class = "col-md-2 control-label"})
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.UpdateModel.Activiteit, new {@class = "form-control", style = "width: 50%"})
                </div>

            </div>
            <div class="form-group">
            
                @Html.LabelFor(m => m.UpdateModel.Image, new { @class = "col-md-2 control-label" })
                <div class="col-md-2">
                    <input type="file" title="file" id="file" accept="image/jpg|png|jpeg" x-moz-errormessage="Enkel png en jpg files toegelaten" name="file" class="hidden form-control" style="width: 50%" onchange="readURL(this)" />
                    <div class="thumbnail" >
                        <img data-src="holder.js/100%x180" height="200" width="200"  id="profile" alt="logo" src="@Model.UpdateModel.Image">
     
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-lg btn-primary btn-block" value="Wijzig" style="width: 50%" />
                </div>
            </div>

        }
    </div>
</div>