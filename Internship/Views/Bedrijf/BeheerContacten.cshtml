@model Internship.Models.Domain.Bedrijf

@{
    ViewBag.Title = "BeheerContacten";
    Layout = "~/Views/Bedrijf/_BedrijfLayout.cshtml";
}

<div class="page-header">
    <h1>@Model.Bedrijfsnaam</h1>
    <h2>Beheer contacten</h2>
</div>

<div>
    
</div>



<div>
    <table class="table-striped">
        <tr>
            <th>Naam</th>
            <th>Voornaam</th>
            <th>Functie</th>
            <th><span class="glyphicon glyphicon-phone"></span></th>
            <th><span class="glyphicon glyphicon-phone-alt"></span></th>
            <th><span class="glyphicon glyphicon-envelope"></span></th>
            <th></th>
        </tr>
        @foreach (var c in Model.ContactPersonen)
        {
            <td>@c.Naam</td><td>@c.Voornaam</td><td>@c.Functie</td><td>@c.GsmNummer</td>
            <td>@c.ContactTelNr</td><td>@c.ContactEmail</td><td>
                                                                <div class="btn-group">
                                                                    <button><span class="glyphicon glyphicon-remove"></span></button>
                                                                    <button><span class="glyphicon glyphicon-pencil"></span></button>
                                                                </div>
                                                            </td>
        }
    </table>
</div>
