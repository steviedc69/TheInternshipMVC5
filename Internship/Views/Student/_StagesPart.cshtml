@model Internship.ViewModels.StudentIndexModel


@if (!Model.Opdrachten.Any())
{
    <p>Geen Stages gevonden die beantwoorden aan uw zoekstring : @Model.Search</p>

}
else
{
    foreach (var item in Model.Opdrachten)
    {
      <div class="panel panel-default">
    <div class="panel-heading">
        <h2 class="panel-title">@item.Title</h2>
        <h3>@item.Adres.Gemeente.Naam</h3>
    </div>
    <div class="panel-body">
        <p>@item.Omschrijving</p>
        Schooljaar :  @item.Schooljaar<br />
        Specialisatie : @item.Specialisatie.Title
    </div>
    <div class=" panel-footer">
            @Html.ActionLink("Details","GetOpdrachtDetail",new{id = item.Id,student=Model.Student.Id})
        </div>
    </div>

    }
}

