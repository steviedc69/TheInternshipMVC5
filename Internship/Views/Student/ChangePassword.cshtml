@using Microsoft.AspNet.Identity
@model Internship.ViewModels.ManageModel

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Student/_StudentLayout.cshtml";
}
<ul class="nav nav-tabs">
    <li >@Html.ActionLink("Profiel", "EditProfile", new { id = User.Identity.GetUserId() })</li>
    <li class="active"><a href="#">Beveiliging</a></li>
</ul>
<h2>Wijzig paswoord</h2>

<div class="panel panel-default">
    <div class="panel-body">
        @using (Html.BeginForm("ChangePassword","Student" ,new { id = User.Identity.GetUserId() }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <h4>Wijzig paswoord</h4>


            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-4 control-label", style = "text-align: left" })
                    <div class="col-md-8">
                        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.OldPassword)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-4 control-label", style = "text-align: left" })
                    <div class="col-md-8">
                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.NewPassword)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 control-label", style = "text-align: left" })
                    <div class="col-md-8">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="wijzig paswoord" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

