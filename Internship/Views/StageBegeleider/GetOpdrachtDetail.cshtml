@using Internship.Models.Domain
@using Microsoft.AspNet.Identity
@using Ninject
@model Internship.Models.Domain.Opdracht
@{
    ViewBag.Title = "View1";
    Layout = "~/Views/StageBegeleider/_StageBegeleiderLayout.cshtml";
}

<div class="row">
    @Html.Partial("_OpdrachtPartial", Model)
    @Html.Partial("_BedrijfPartial",Model.Bedrijf)
</div>
<div class="row">
    @if (Model.StageStudenten == null)
    {
        <div class="alert-info">Nog geen studenten toegewezen aan deze stage</div>
    }
    else
    {
        int i = 0;

        foreach (Student student in @Model.StageStudenten)
        {

            i++;

            if (i == 1)
            {
               @: <div class="row">
            }
                    @Html.Partial("_StudentPartial", student)
             if (i == 3)
             {
                    i = 0;
                @:</div>
             }


        }




    }


</div>
<div class="btn-group-sm">
    @Html.ActionLink("Terug naar lijst", "Index", new { id = User.Identity.GetUserId() }, new { @class = "btn btn-primary" })
    @*@Html.ActionLink("Aan favorieten toevoegen", "AddToFavorites", new { id = User.Identity.GetUserId() }, new { @class = "btn btn-primary" })*@
</div>